<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Signup ‚Äì Pawlitics</title>
  <link rel="stylesheet" href="/styles/signup.css" />
  <script defer src="/scripts/form.js"></script>
  <script>
    // Handle invitation parameters
    document.addEventListener('DOMContentLoaded', function() {
      const urlParams = new URLSearchParams(window.location.search);
      const inviteEmail = urlParams.get('invite');
      const role = urlParams.get('role');
      
      if (inviteEmail) {
        const emailInput = document.getElementById('email');
        if (emailInput) {
          emailInput.value = inviteEmail;
          emailInput.readOnly = true;
          emailInput.style.backgroundColor = '#f3f4f6';
        }
        
        // Show invitation message
        const form = document.getElementById('signupForm');
        if (form) {
          const invitationDiv = document.createElement('div');
          invitationDiv.className = 'invitation-message';
          invitationDiv.innerHTML = `
            <div style="background: linear-gradient(135deg, #8b5cf6, #7c3aed); color: white; padding: 15px; border-radius: 8px; margin-bottom: 20px; text-align: center;">
              <h3 style="margin: 0 0 10px 0; font-size: 18px;">üéâ You're Invited to Join Pawlitics!</h3>
              <p style="margin: 0; opacity: 0.9;">You've been invited as a <strong>${role ? role.charAt(0).toUpperCase() + role.slice(1) : 'Team Member'}</strong></p>
            </div>
          `;
          form.insertBefore(invitationDiv, form.firstChild);
        }
      }
    });
  </script>
</head>
<body>
  <!-- Loader -->
  <div class="loader-wrapper" id="loader-wrapper">
    <div class="loader"></div>
  </div>

  <!-- Navbar -->
  <nav class="navbar">
    <div class="nav-container">
      <a class="logo" href="/">üê∂ Pawlytics</a>
      <ul class="nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/analyze">Analyze</a></li>
        <li><a href="/login">Login</a></li>
        <li><a href="/signup">Signup</a></li>
      </ul>
    </div>
  </nav>

  <!-- Signup Form -->
  <div class="container signup-container">
    <h2 class="signup-title">üêæ Create Your Pawlytics Account</h2>

    <form method="POST" action="/signup" id="signupForm">
      <label for="name">Name:</label>
      <input type="text" name="name" placeholder="John Doe" required />

      <label for="email">Email:</label>
      <input type="email" id="email" name="email" placeholder="example@email.com" required />
      <p id="emailError" class="error-message hidden"></p>

      <label for="password">Password:</label>
      <input type="password" id="password" name="password" placeholder="Password" required />

      <label for="confirmPassword">Confirm Password:</label>
      <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" required />
      <p id="passwordError" class="error-message hidden"></p>

      <button type="submit" class="cta-button">Sign Up</button>
    </form>

    <p class="signup-footer">
      Already have an account? <a href="/login">Login</a>
    </p>

<% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
  <div class="error-message"><%= errorMessage %></div>
<% } %>

  </div>

  <!-- Footer -->
  <footer class="footer">
    <p>&copy; 2025 Pawlytics | Your Dog‚Äôs Smart Health Partner</p>
  </footer>
</body>
</html>
